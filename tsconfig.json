{
    "include": [
        "src/app.ts"
    ],
    "exclude": [],
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "baseUrl": "./",
        "lib": [
            "es5",
            "es6",
            "es2015.promise",
            "dom",
            "es2017.object",
            "es2016.array.include"
        ],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,

        "paths": {
            "~/*": [
                "./src/*"
            ],
            "const": ["./src/const"],
            "actions": ["./src/actions/index.ts"],
            "actions/*": ["./src/actions/*"],
            "reducers": ["./src/reducers/index.ts"],
            "store": ["./src/store/index.ts"],
            "store/*": ["./src/store/*"],
            "lib/*": ["./src/lib/*"],
        }
    }
}
